<% wrap_layout :layout do %>

<%= partial(:top_navbar, :locals => {:post_active => 'active', :lang_hidden => true }) %>

<div id="no-sidenav-container" class="container">

  <section>
    <a href="<%= locale_base_path %>/blog"><%= I18n.t('blog.back_blog_main') %></a>
    <div class="page-header">
      <h1><%= current_page.title %></h1>
    </div>

    <% if I18n.locale.to_s == 'pt' %>
      <% date_format = "%d/%m/%Y" %>
    <% else %>
      <% date_format = "%b %d, %Y" %>
    <% end %>
    <h4><time><%= current_page.date.strftime(date_format) %></time></h4>
    <br>
    <div id="post_content">
      <%= yield %>
    </div>
    <% if I18n.locale.to_s == 'en' and false %>
    <hr></hr>
    <div class="row">
      <div class="span5">
        <b>If you liked this post and want to see more like this, please consider making a small donation. You can choose the amount and also make a suggestion for future post topics in the PayPal checkout.</b>
      </div>
      <div class="span5">
        <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
        <input type="hidden" name="cmd" value="_s-xclick">
        <input type="hidden" name="hosted_button_id" value="H76SHMUF8WCLN">
        <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
        <img alt="" border="0" src="https://www.paypalobjects.com/pt_BR/i/scr/pixel.gif" width="1" height="1">
        </form>
      </div>
    </div>
    <% else %>
    <% end %>
    <hr></hr>
    <a href="<%= locale_base_path %>/blog"><%= I18n.t('blog.back_blog_main') %></a>
    <% if current_page.data.comments %>
      <hr></hr>
      <div id="disqus_thread"></div>
        <script type="text/javascript">
          /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
          var disqus_shortname = "<%= 'cesarsalgado'+I18n.locale.to_s %>"; // Required - Replace '<example>' with your forum shortname
          var disqus_title = '<%= current_page.title %>';
          var disqus_url = '<%= 'http://cesarsalgado.com'+current_page.url %>';

          /* * * DON'T EDIT BELOW THIS LINE * * */
          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
        </script>
      <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
      <hr></hr>
      <a href="<%= locale_base_path %>/blog"><%= I18n.t('blog.back_blog_main') %></a>
    <% end %>
  </section>


</div>

<% end %>
