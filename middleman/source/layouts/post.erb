<% wrap_layout :layout do %>

<%= partial(:top_navbar, :locals => {:post_active => 'active'}) %>

<div id="no-sidenav-container" class="container">

  <section>
    <a href="<%= locale_base_path %>/blog"><%= I18n.t('blog.back_blog_main') %></a>
    <div class="page-header">
      <h1><%= current_page.title %></h1>
    </div>
    <h4><time><%= current_page.date.strftime("%b %d, %Y") %></time></h4>
    <br>
    <div id="post_content">
      <%= yield %>
    </div>
    <a href="<%= locale_base_path %>/blog"><%= I18n.t('blog.back_blog_main') %></a>
  </section>
  
</div>

<% end %>
